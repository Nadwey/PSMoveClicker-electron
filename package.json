{
    "name": "psmoveclicker-electron",
    "version": "2.0.0-beta.1",
    "description": "",
    "main": "index.js",
    "homepage": "./",
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "electron": "^22.0.0",
        "electron-builder": "^23.6.0",
        "node-addon-api": "^5.0.0",
        "node-gyp": "^9.3.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "^5.0.1",
        "wait-on": "^7.0.1"
    },
    "dependencies": {
        "@electron/remote": "^2.0.9",
        "electron-is-dev": "^2.0.0"
    },
    "scripts": {
        "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"electron .\"",
        "react-build": "react-scripts build",
        "electron-build": "electron-builder --dir",
        "build": "cd PSMoveClickerAPI && node-gyp configure rebuild && cd .. && react-scripts build && electron-builder --dir && copy PSMoveClickerAPI\\PSMoveClient_CAPI.dll dist\\win-unpacked\\PSMoveClient_CAPI.dll"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "build": {
        "extends": null,
        "win": {
            "target": [
                "portable"
            ]
        },
        "files": [
          "*.js",
          "build",
          "node_modules",
          "PSMoveClickerAPI",
          "PSMoveClient_CAPI.dll"
        ]
    }
}
