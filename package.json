    "description": "",
    "main": "index.js",
    "homepage": "./",
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^7.0.0",
        "cross-env": "^7.0.3",
        "electron": "^18.3.7",
        "electron-builder": "^22.14.13",
        "electron-packager": "^15.4.0",
        "electron-rebuild": "^3.2.7",
        "mdb-react-ui-kit": "^3.0.0",
        "node-addon-api": "^4.3.0",
        "node-gyp": "^9.0.0",
        "notiflix": "^3.2.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-markdown": "^8.0.1",
        "react-scripts": "^5.0.0",
        "remark-gfm": "^3.0.1",
        "wait-on": "^6.0.1"
    },
    "dependencies": {
        "@electron/remote": "^2.0.8",
        "electron-is-dev": "^2.0.0"
    },
    "scripts": {
        "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"electron .\"",
        "react-build": "react-scripts build",
        "electron-build": "electron-builder --dir",
        "build": "cd PSMoveClickerAPI && node-gyp configure rebuild && cd .. && react-scripts build && electron-builder --dir && copy PSMoveClickerAPI\\PSMoveClient_CAPI.dll dist\\win-unpacked\\PSMoveClient_CAPI.dll"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "build": {
        "extends": null,
        "win": {
            "target": [
                "portable"
            ]
        },
        "files": [
          "*.js",
          "build",
          "node_modules",
          "PSMoveClickerAPI",
          "PSMoveClient_CAPI.dll"
        ]
    }
}
